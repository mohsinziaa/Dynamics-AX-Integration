@page
@model ax.Pages.CustomerModel
@{
    ViewData["Title"] = "Customer Data";
}

<style>
    .customer-form{
        padding: 25px;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }
</style>

<form class="customer-form">
    <legend>Customer Information</legend>
    <div class="row mb-3">
        <div class="col">
            <label for="Name" class="form-label">Name</label>
            <input type="text" class="form-control" id="Name" value="S&D" >
        </div>

        <div class="col">
            <label for="customerAccount" class="form-label">Customer Account</label>
            <input type="text" class="form-control" id="customerAccount" value="CUST-001297" readonly>
        </div>
    </div>
    <div class="mb-3">
        <label for="deliveryAddress" class="form-label">Delivery Address</label>
        <textarea class="form-control" id="deliveryAddress" rows="2" readonly>Plot B1-A SITE Phase 1, M-9, Karachi, Pakistan</textarea>
    </div>

    <hr class="mt-5 mt-4" />
    <legend class="mt-2">General Information</legend>

    <div class="row mb-3">
        <div class="col">
            <label for="salesOrder" class="form-label">Sales Order</label>
            <input type="text" class="form-control" id="salesOrder" value="SO-138615" readonly>
        </div>

        <div class="col">
            <label for="podDate" class="form-label">Date Of POD</label>
            <input type="date" class="form-control" id="podDate" >
        </div>

        <div class="col">
            <label for="site" class="form-label">Site</label>
            <select class="form-select" id="site">
                <option value="MATCO01">MATCO01</option>
                <option value="MATCO02">MATCO02</option>
                <option value="RIVIANA">RIVIANA</option>
            </select>
        </div>

        <div class="col">
            <label for="warehouse" class="form-label">Warehouse</label>
            <select class="form-select" id="warehouse">
                <option value="WH-01">WH-01</option>
                <option value="WH-02">WH-02</option>
                <option value="WH-03">WH-03</option>
            </select>
        </div>

    </div>

    <div class="row mb-3">

        <div class="col">
            <label for="shippingTimezone" class="form-label">Shipping Location Timezone</label>
            <select class="form-select" id="shippingTimezone" readonly>
                <option value="(GMT+05:00) Islamabad, Karachi, Tashkent">(GMT+05:00) Islamabad, Karachi, Tashkent</option>
            </select>
        </div>

    </div>

    <hr class="mt-5 mt-4" />
    <legend class="mt-2">References</legend>

    <div class="row mb-3">

        <div class="col-md-3">
            <label for="customerRequisition" class="form-label">Customer Requisition</label>
            <input type="text" class="form-control" id="customerRequisition">
        </div>

        <div class="col">
            <label for="reference" class="form-label">Reference</label>
            <input type="text" class="form-control" id="reference">
        </div>

    </div>

    <div class="d-flex justify-content-end mt-5">
        <button type="submit" class="btn btn-primary" id="createItemsBtn">Create Items</button>
    </div>

</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {
        // Set default date to today's date
        $("#podDate").val(new Date().toISOString().split('T')[0]);
        let accountName = $("#Name").val();

         $.ajax({
            url: "/Customer?handler=FetchCustomerData",
            type: "GET",
            data: { accountName: accountName },
            success: function (response) {

                $("#customerAccount").val() = response.customerAccount;
                $("#deliveryAddress").val() = response.deliveryAddress;

            },
            error: function () {
                alert("Error Fetching Customer Account!");
            }
        });

        $("#createItemsBtn").on("click", function (event) {
            event.preventDefault(); // Prevent form submission

            let customerData = {
                name: $("#Name").val(),
                customerAccount: $("#customerAccount").val(),
                deliveryAddress: $("#deliveryAddress").val(),
                salesOrder: $("#salesOrder").val(),
                podDate: $("#podDate").val(),
                site: $("#site").val(),
                warehouse: $("#warehouse").val(),
                shippingTimezone: $("#shippingTimezone").val(),
                customerRequisition: $("#customerRequisition").val(),
                reference: $("#reference").val()
            };

            console.log(customerData); // Log data for debugging
        });
    });
</script>
