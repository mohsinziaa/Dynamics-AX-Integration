@page
@model ax.Pages.CustomerModel
@{
    ViewData["Title"] = "Customer Data";
}

<style>
    .customer-form{
        padding: 25px;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }
</style>

<form class="customer-form">
    <legend>Customer Information</legend>
    <div class="row mb-3">
        <div class="col">
            <label for="Name" class="form-label">Name</label>
            <input type="text" class="form-control" id="Name" value="S&D" >
        </div>

        <div class="col">
            <label for="customerAccount" class="form-label">Customer Account</label>
            <input type="text" class="form-control" id="customerAccount" value="CUST-001297">
        </div>
    </div>
    <div class="mb-3">
        <label for="deliveryAddress" class="form-label">Delivery Address</label>
        <textarea class="form-control" id="deliveryAddress" rows="2" >Plot B1-A SITE Phase 1, M-9, Karachi, Pakistan</textarea>
    </div>

    <div class="row mb-3">
        <div class="col">
            <label for="invoiceName" class="form-label">Invoice Name</label>
            <input type="text" class="form-control" id="invoiceName" value="S&D" >
        </div>

        <div class="col">
            <label for="invoiceAccount" class="form-label">Invoice Account Name</label>
            <input type="text" class="form-control" id="invoiceAccount" value="CUST-001297">
        </div>
    </div>

    <legend class="mt-3">General Information</legend>

    <div class="row mb-3">
        <div class="col">
            <label for="salesOrder" class="form-label">Sales Order</label>
            <input type="text" class="form-control" id="salesOrder" value="50-138614" >
        </div>

        <div class="col">
            <label for="orderType" class="form-label">Order Type</label>
            @* <input type="text" class="form-control" id="orderType" value="Sales Order" > *@
            <select class="form-select" id="orderType">
                <option value="Sales Order" selected>Sales Order</option>
                <option value="Returned Order">Returned Order</option>
                <option value="Blanket Order">Blanket Order</option>
            </select>
        </div>

        <div class="col">
            <label for="podDate" class="form-label">Date Of POD</label>
            <input type="date" class="form-control" id="podDate" >
        </div>

        <div class="col">
            <label for="shipmentDate" class="form-label">Intended Date Of Shipment</label>
            <input type="date" class="form-control" id="shipmentDate">
        </div>

    </div>

    <div class="row mb-3">
        <div class="col">
            <label for="currency" class="form-label">Currency</label>
            <select class="form-select" id="currency">
                <option value="PKR">PKR</option>
                <option value="USD">USD</option>
                <option value="INR">INR</option>
            </select>
        </div>

        <div class="col">
            <label for="modeOfDelivery" class="form-label">Mode Of Delivery</label>
            <select class="form-select" id="modeOfDelivery">
                <option value="Road">Road</option>
                <option value="Air">Air</option>
                <option value="Water">Water</option>
            </select>
        </div>

        <div class="col">
            <label for="site" class="form-label">Site</label>
            <select class="form-select" id="site">
                <option value="MATCO01">MATCO01</option>
                <option value="MATCO02">MATCO02</option>
                <option value="RIVIANA">RIVIANA</option>
            </select>
        </div>

        <div class="col">
            <label for="warehouse" class="form-label">Warehouse</label>
            <select class="form-select" id="warehouse">
                <option value="WH-01">WH-01</option>
                <option value="WH-02">WH-02</option>
                <option value="WH-03">WH-03</option>
            </select>
        </div>

    </div>

    <div class="row mb-3">

        <div class="col">
            <label for="deliveryDateControl" class="form-label">Delivery Date Control</label>
            <select class="form-select" id="deliveryDateControl">
                <option value="" selected>Select</option>
                <option value="Sales Lead Time">Sales Lead Time</option>
                <option value="ATP">ATP</option>
            </select>
        </div>

        <div class="col">
            <label for="totalContainers" class="form-label">Total Containers</label>
            <input type="text" class="form-control" id="totalContainers" placeholder="0.0000">
        </div>

        <div class="col">
            <label for="sizeOfContainers" class="form-label">Size Of Containers</label>
            <select class="form-select" id="sizeOfContainers">
                <option value="" selected>Select</option>
                <option value="20'">20'</option>
                <option value="40'">40'</option>
            </select>
        </div>

        <div class="col">
            <label for="shippingTimezone" class="form-label">Shipping Location Timezone</label>
            <select class="form-select" id="shippingTimezone" >
                <option value="(GMT+05:00) Islamabad">(GMT+05:00) Islamabad</option>
                <option value="ATP">ATP</option>
            </select>
        </div>

    </div>

    <legend class="mt-3">References</legend>

    <div class="row mb-3">

        <div class="col-md-3">
            <label for="customerRequisition" class="form-label">Customer Requisition</label>
            <input type="text" class="form-control" id="customerRequisition">
        </div>

        <div class="col">
            <label for="reference" class="form-label">Reference</label>
            <input type="text" class="form-control" id="reference">
        </div>

    </div>

    <div class="d-flex justify-content-end mt-5">
        <button type="submit" class="btn btn-primary" id="createItemsBtn">Create Items</button>
    </div>

</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function () {
        // Set default dates to today's date
        $("#podDate, #shipmentDate").val(new Date().toISOString().split('T')[0]);

        $("#createItemsBtn").on("click", function (event) {
            event.preventDefault(); // Prevent form submission

            let customerData = {
                name: $("#Name").val(),
                customerAccount: $("#customerAccount").val(),
                deliveryAddress: $("#deliveryAddress").val(),
                invoiceName: $("#invoiceName").val(),
                invoiceAccount: $("#invoiceAccount").val(),
                salesOrder: $("#salesOrder").val(),
                orderType: $("#orderType").val(),
                podDate: $("#podDate").val(),
                shipmentDate: $("#shipmentDate").val(),
                currency: $("#currency").val(),
                modeOfDelivery: $("#modeOfDelivery").val(),
                site: $("#site").val(),
                warehouse: $("#warehouse").val(),
                deliveryDateControl: $("#deliveryDateControl").val(),
                totalContainers: $("#totalContainers").val(),
                sizeOfContainers: $("#sizeOfContainers").val(),
                shippingTimezone: $("#shippingTimezone").val(),
                customerRequisition: $("#customerRequisition").val(),
                reference: $("#reference").val()
            };

            console.log(customerData); 
        });
    });
</script>
